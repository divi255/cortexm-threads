    "version": "0.2.0",
    "configurations": [
        {
            "name": "qemu-m4 - GDB",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}/example_crates/qemu-m4",
            "target": "${workspaceRoot}/example_crates/qemu-m4/target/thumbv7em-none-eabi/debug/qemu-m4", 
            "gdbpath" : "gdb-multiarch",
            "autorun": [
                "target remote :3333",
                "monitor arm semihosting enable"
            ]
        },
        {
            "name": "microbit - GDB",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}/example_crates/microbit",
            "target": "${workspaceRoot}/example_crates/microbit/target/thumbv6m-none-eabi/debug/microbit", 
            "gdbpath" : "gdb-multiarch",
            "autorun": [
                "target remote :3333",
                "set remotetimeout 5",
                "set print asm-demangle on",
                "monitor arm semihosting enable",
                "load",
                "break PendSV",
                "break main",
                "continue" 
            ]
        },
        {
            "name": "F3 - GDB",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}/example_crates/stm32f3",
            "target": "${workspaceRoot}/example_crates/stm32f3/target/thumbv7em-none-eabihf/debug/stm32f3", 
            "gdbpath" : "gdb-multiarch",
            "autorun": [
                "target remote :3333",
                "set remotetimeout 5",
                "set print asm-demangle on",
                "monitor arm semihosting enable",
                "load",
                "break main",
                "continue" 
            ]
        }
    ]
}
